# Environment Variables Configuration
# Copy this file to .env and fill in your actual values

# ===== REQUIRED CONFIGURATION =====

# CI&T Flow API Client ID
CLIENT_ID=your_client_id_here

# CI&T Flow API Client Secret  
CLIENT_SECRET=your_client_secret_here

# Path to RAG documents folder (must exist and contain documents)
RAG_FOLDER=./rag

# ===== OPTIONAL RAG CONFIGURATION =====

# Document Processing Settings
RAG_CHUNK_SIZE=1000
RAG_CHUNK_OVERLAP=200

# Embedding Model Settings
RAG_EMBEDDING_MODEL=all-MiniLM-L6-v2
RAG_EMBEDDING_BATCH_SIZE=32

# Vector Database Settings
RAG_VECTOR_DB_PATH=./data/chroma_db
RAG_COLLECTION_NAME=documents

# Retrieval Settings
RAG_SIMILARITY_THRESHOLD=0.7
RAG_MAX_CONTEXT_CHUNKS=5

# Context Formatting Settings
RAG_CONTEXT_SEPARATOR=\n\n---\n\n
RAG_INCLUDE_SOURCE_INFO=true

# System Settings
RAG_ENABLE_AUTO_INDEXING=true